# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  serialize_config = debug
  ecs_config = debug
endif
ifeq ($(config),release)
  serialize_config = release
  ecs_config = release
endif
ifeq ($(config),dist)
  serialize_config = dist
  ecs_config = dist
endif

PROJECTS := serialize ecs

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

serialize:
ifneq (,$(serialize_config))
	@echo "==== Building serialize ($(serialize_config)) ===="
	@${MAKE} --no-print-directory -C . -f serialize.make config=$(serialize_config)
endif

ecs: serialize
ifneq (,$(ecs_config))
	@echo "==== Building ecs ($(ecs_config)) ===="
	@${MAKE} --no-print-directory -C . -f ecs.make config=$(ecs_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f serialize.make clean
	@${MAKE} --no-print-directory -C . -f ecs.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  dist"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   serialize"
	@echo "   ecs"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"